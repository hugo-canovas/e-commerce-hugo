{% extends 'base.html.twig' %}

{% block title %}Produit{% endblock %}

{% block body %}
    <h1>Produit</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ produit.id }}</td>
            </tr>
            <tr>
                <th>Designation</th>
                <td>{{ produit.designation }}</td>
            </tr>
            <tr>
                <th>PrixUnite</th>
                <td>{{ produit.prixUnite }}</td>
            </tr>
            <tr>
                <th>QteStock</th>
                <td>{{ produit.qteStock }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_produit_index') }}">back to list</a>
    <a href="{{ path('app_panier_ajouter', {id: produit.id}) }}">Ajouter au panier</a>
    {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('app_produit_edit', {'id': produit.id}) }}">edit</a>
        {{ include('produit/_delete_form.html.twig') }}
    {% endif %}
    
{% endblock %}
